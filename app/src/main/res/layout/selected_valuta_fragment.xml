<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/selected_valuta_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fake_value"
            android:textSize="@dimen/valuta_text_size" />
        <TextView
            android:id="@+id/selected_valuta_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fake_value"
            android:textSize="@dimen/valuta_text_size" />
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/primary_dark_material_dark"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rub"
            android:textSize="@dimen/valuta_text_size" />
        <TextView
            android:id="@+id/rub_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fake_value"
            android:textSize="@dimen/valuta_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/selected_valuta_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/fake_value"
        android:textSize="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/buy"
            android:id="@+id/selected_valuta_buy"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sell"
            android:id="@+id/selected_valuta_sell"/>

    </LinearLayout>

</LinearLayout>
